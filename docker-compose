version: '3.3'
services:
  kibana:
    depends_on:
      - elasticsearch
    container_name: kibana
    ports:
      - '0.0.0.0:5601:5601'
    environment:
      - server.host="0.0.0.0"
      - ELASTICSEARCH_USERNAME="kibana_administrator"
      - ELASTICSEARCH_PASSWORD="ESG1_P4r1s"
    image: docker.elastic.co/kibana/kibana:8.7.0
    hostname: kibana
    volumes:
      - 'kibana:/usr/share/kibana'
    networks:
      default:
        ipv4_address: 192.168.214.2

  elasticsearch:
    command: >
      /bin/bash -c '
        /usr/share/elasticsearch/bin/elasticsearch-users useradd kibana_administrator -p ESG1_P4r1s -r superuser,kibana_admin,kibana_system;
        /usr/local/bin/docker-entrypoint.sh elasticsearch;
      '
    container_name: elasticsearch
    ports:
      - '0.0.0.0:9200:9200'
      - '0.0.0.0:9300:9300'
    environment:
      - discovery.type=single-node
      - ES_JAVA_OPTS=-Xmx1g
      - xpack.security.enabled=true
      - xpack.security.audit.enabled=true
    image: docker.elastic.co/elasticsearch/elasticsearch:8.7.0
    hostname: elasticsearch
    volumes:
      - 'elasticsearch:/usr/share/elasticsearch'
    networks:
      default:
        ipv4_address: 192.168.214.3
  filebeat:
    depends_on:
      - elasticsearch
    image: docker.elastic.co/beats/filebeat:8.7.0
    user: root
    container_name: filebeat
    hostname: filebeat

    volumes:
      - "/volume1/Docker/honeypot/filebeat/filebeat.yml:/usr/share/filebeat/filebeat.yml:ro"
      - "/var/lib/docker:/var/lib/docker:ro"
      - "/var/run/docker.sock:/var/run/docker.sock"
    networks:
      default:
        ipv4_address: 192.168.214.4


volumes:
  kibana:
    driver: local
  elasticsearch:
    driver: local

networks:
  default:
    external: true
    name: honeypot_network
